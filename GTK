import gi
gi.require_version('Gtk', '3.0')
gi.require_version('GtkSource', '3.0')
from gi.repository import Gtk, GtkSource

def main():
    # Initialize the builder and load the Glade file
    builder = Gtk.Builder()
    builder.add_from_file("my_ui.glade")

    # Get the main window
    window = builder.get_object("window1")

    # Find the placeholder widget
    placeholder = builder.get_object("placeholder_widget")  # Use the actual ID from Glade

    if placeholder:
        # Get the parent container of the placeholder
        parent = placeholder.get_parent()

        # Remove the placeholder widget from the parent
        parent.remove(placeholder)

        # Create the GtkSourceView widget
        source_view = GtkSource.View()

        # Add GtkSourceView to the parent container
        parent.pack_start(source_view, True, True, 0)

        # Show all widgets
        window.show_all()

        # Start the GTK main loop
        Gtk.main()
    else:
        print("Placeholder widget not found!")

if __name__ == "__main__":
    main()
